{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npx serve -s dist -l $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "VITE_WS_URL": "wss://sad-chess-production.up.railway.app",
    "VITE_API_URL": "https://sad-chess-production.up.railway.app/api/v1"
  }
} 